<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="codingdojo">
        <!--jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source-->
        <class>de.cofinpro.codingdojo.server.api.Election</class>
        <class>de.cofinpro.codingdojo.server.api.Party</class>
        <class>de.cofinpro.codingdojo.server.api.Vote</class>
        <class>de.cofinpro.codingdojo.server.api.Voter</class>
        <class>de.cofinpro.codingdojo.server.api.Approval</class>

        <properties>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
        </properties>
        <!--properties>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties-->
    </persistence-unit>

</persistence>