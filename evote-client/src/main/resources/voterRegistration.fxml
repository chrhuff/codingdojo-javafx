<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.cofinpro.codingdojo.client.VoteController">
    <children>
        <GridPane fx:id="pane1" alignment="CENTER" hgap="5.0" vgap="5.0">
            <children>
                <Label fx:id="label" alignment="CENTER" text="Name:" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" alignment="CENTER_LEFT" maxWidth="300.0" minWidth="200.0" onAction="#registerVoter" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button alignment="CENTER" onAction="#registerVoter" text="Register!" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
            </children>
            <columnConstraints>
                <ColumnConstraints maxWidth="65.0" minWidth="10.0" percentWidth="10.0" prefWidth="65.0" />
                <ColumnConstraints percentWidth="80.0" />
                <ColumnConstraints maxWidth="77.0" minWidth="10.0" percentWidth="10.0" prefWidth="77.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
        <GridPane fx:id="pane2" hgap="5.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="420.0" vgap="5.0" visible="false">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="72.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="11.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="7.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" percentHeight="70.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label id="greeter" fx:id="greeter" text="Willkommen!" GridPane.columnIndex="1" />
                <ComboBox id="election" fx:id="election" maxWidth="350.0" minWidth="250.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <ListView id="party" fx:id="party" maxWidth="350.0" minWidth="250.0" prefHeight="450.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button minWidth="50.0" mnemonicParsing="false" onAction="#castVote" text="Vote!" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="TOP" />
            </children>
        </GridPane>
    </children>
</Pane>
